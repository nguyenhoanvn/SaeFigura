<helpers:FullScreenWindow 
        x:Class="FigureManagementSystem.Views.MasterDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:FigureManagementSystem.Helpers"
        xmlns:fragments="clr-namespace:FigureManagementSystem.Fragments"
        Title="Management System" 
        Background="#F5F5F5">

    <helpers:FullScreenWindow.Resources>
        <!-- Button Style -->
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2E6DA4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" 
                                    Direction="270" 
                                    ShadowDepth="3" 
                                    BlurRadius="5" 
                                    Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Description Style -->
        <Style x:Key="DescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </helpers:FullScreenWindow.Resources>

    <Grid>
        <!-- Main Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="#2C3E50" 
                Padding="20">
            <StackPanel>
                <TextBlock Text="Management System" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Navigate to different management sections" 
                          FontSize="16" 
                          Foreground="#BDC3C7" 
                          HorizontalAlignment="Center" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled">
            <UniformGrid Columns="2" 
                        Margin="20">

                <!-- Series Management Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📺 Series Management" 
                                  Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Manage TV series, seasons, episodes and related information. Add, edit, delete and organize your series database."
                                  Style="{StaticResource DescriptionStyle}"/>
                        <Button x:Name="btnSeries"
                                Content="Manage Series"
                                Style="{StaticResource NavigationButtonStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Characters Management Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="👥 Characters Management" 
                                  Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Manage character profiles, relationships, and character development across different series and episodes."
                                  Style="{StaticResource DescriptionStyle}"/>
                        <Button x:Name="btnCharacters"
                                Content="Manage Characters"
                                Style="{StaticResource NavigationButtonStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Brands Management Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="🏷️ Brands Management" 
                                  Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Manage brand information, logos, partnerships and brand-related content across your media library."
                                  Style="{StaticResource DescriptionStyle}"/>
                        <Button x:Name="btnBrands"
                                Content="Manage Brands"
                                Style="{StaticResource NavigationButtonStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Categories Management Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📂 Categories Management" 
                                  Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Organize content into categories and subcategories. Manage genre classifications and content organization."
                                  Style="{StaticResource DescriptionStyle}"/>
                        <Button x:Name="btnCategories"
                                Content="Manage Categories"
                                Style="{StaticResource NavigationButtonStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Material Management Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📁 Material Management" 
                                  Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Manage media files, assets, documents and other materials associated with your content library."
                                  Style="{StaticResource DescriptionStyle}"/>
                        <Button x:Name="btnMaterial"
                                Content="Manage Material"
                                Style="{StaticResource NavigationButtonStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Quick Actions Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="⚡ Quick Actions" 
                                  Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Access frequently used functions and system-wide operations like imports, exports, and bulk operations."
                                  Style="{StaticResource DescriptionStyle}"/>
                        <StackPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center">
                            <Button x:Name="btnImport"
                                    Content="Import Data"
                                    Style="{StaticResource NavigationButtonStyle}"
                                    Background="#27AE60"
                                    Margin="5"/>
                            <Button x:Name="btnExport"
                                    Content="Export Data"
                                    Style="{StaticResource NavigationButtonStyle}"
                                    Background="#E67E22"
                                    Margin="5"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </UniformGrid>
        </ScrollViewer>
        <fragments:FooterControl Grid.Row="2" />
    </Grid>
    
</helpers:FullScreenWindow>