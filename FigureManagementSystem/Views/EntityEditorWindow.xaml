<Window x:Class="FigureManagementSystem.Views.EntityEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#FFF8F9FA"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      Background="Transparent" 
                      Margin="0 0 0 50">
            <StackPanel x:Name="FormPanel" Margin="10" />
        </ScrollViewer>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="10"
                    Background="#FFF"
                    >
            <Button Content="Save"
                    Click="Save_Click"
                    Width="100"
                    Margin="5"
                    Padding="6"
                    Background="#0078D4"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                     />

            <Button Content="Cancel"
                    Click="Cancel_Click"
                    Width="100"
                    Margin="5"
                    Padding="6"
                    Background="#E1E1E1"
                    Foreground="#333"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    />
        </StackPanel>
    </Grid>
</Window>
